<idea-plugin>
    <id>com.github.v1ki.springassistant</id>
    <name>spring-assistant</name>
    <vendor>v1ki</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.v1ki.springassistant.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.v1ki.springassistant.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.v1ki.springassistant.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
